<%= form_for(@post) do |post_form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= post_form.label :title %><br />
    <%= post_form.text_field :title %>
  </div>
  <div class="field">
    <%= post_form.label :url %><br />
    <%= post_form.text_field :url %>
  </div>
  <%= post_form.fields_for :user do |user_form| %>
    <div class="field">
      <%= user_form.label :username %><br />
      <%= user_form.text_field :username, value: (@post.username if @post.user) %>
    </div>
  <% end %>

  <div class="actions">
    <%= post_form.submit %>
  </div>
<% end %>